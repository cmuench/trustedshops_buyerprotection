<config>
    <modules>
        <Symmetrics_Buyerprotect>
            <version>0.1.0</version>
        </Symmetrics_Buyerprotect>
    </modules>
    <global>
        <blocks>
            <buyerprotect>
                <class>Symmetrics_Buyerprotect_Block</class>
            </buyerprotect>
        </blocks>
        <catalog>
            <product>
                <type>
                    <buyerprotect translate="label" module="buyerprotect">
                        <label>Trusted Shops - Buyerprotection</label>
                        <model>buyerprotect/type_buyerprotect</model>
                        <!--<price_model>modulename/product_price</price_model>-->
                        <index_priority>15</index_priority>
                    </buyerprotect>
                </type>
            </product>
        </catalog>
        <helpers>
            <buyerprotect>
                <class>Symmetrics_Buyerprotect_Helper</class>
            </buyerprotect>
        </helpers>
        <models>
            <buyerprotect>
                <class>Symmetrics_Buyerprotect_Model</class>
            </buyerprotect>
        </models>
        <resources>
            <buyerprotect_setup>
                <setup>
                    <module>Symmetrics_Buyerprotect</module>
                    <class>Symmetrics_Buyerprotect_Model_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </buyerprotect_setup>
		</resources>
        <events>
            <controller_action_predispatch_checkout_onepage_savePayment>
                <observers>
                    <buyerprotect>
                        <type>singleton</type>
                        <class>Symmetrics_Buyerprotect_Model_Observer</class>
                        <method>addProductToCart</method>
                    </buyerprotect>
                </observers>
            </controller_action_predispatch_checkout_onepage_savePayment>
            <checkout_type_onepage_save_order>
                <observers>
                    <buyerprotect>
                        <type>singleton</type>
                        <class>Symmetrics_Buyerprotect_Model_Observer</class>
                        <method>checkoutOrderSaveAfter</method>
                    </buyerprotect>
                </observers>
            </checkout_type_onepage_save_order>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <buyerprotect>
                    <file>buyerprotect.xml</file>
                </buyerprotect>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <layout>
            <updates>
                <buyerprotect>
                    <file>buyerprotect.xml</file>
                </buyerprotect>
            </updates>
        </layout>
        <translate>
            <modules>
                <Symmetrics_Buyerprotect>
                    <files>
                        <default>Symmetrics_Buyerprotect.csv</default>
                    </files>
                </Symmetrics_Buyerprotect>
            </modules>
        </translate>
    </adminhtml>

    <default>
        <buyerprotection>
            <data>
<!--                <trustedshops_erroremail_sender><![CDATA[shop@magentoshop.loc]]></trustedshops_erroremail_sender>-->
                <trustedshops_erroremail_recipient><![CDATA[dev@trustedshops.de]]></trustedshops_erroremail_recipient>
            </data>
        </buyerprotection>
    </default>
</config>
