<script type="text/javascript" charset="UTF-8">
/*<![CDATA[*/
    var inputMode = 'disabled';
    var inputNodeIds = new Array('sku', 'visibility', 'name', 'price');

    Event.observe(window, 'load',
        function()
        {
            inputNodeIds.each(
                function(item)
                {
                    $(item).writeAttribute(inputMode, inputMode);
                }
            );
        }
    )
/*]]>*/
</script>

